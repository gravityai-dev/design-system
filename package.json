{
  "name": "@gravityai-dev/design-system",
  "version": "0.2.11",
  "description": "AI-powered design system with server-driven components",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate-index": "mkdir -p .storybook-index && storybook index --output-file .storybook-index/index.json",
    "generate-nodes": "npm run generate-index && npm run build && DESIGN_SYSTEM_URL=${DESIGN_SYSTEM_URL:-http://localhost:4100} ts-node scripts/generate-nodes.ts && npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "ai",
    "components",
    "react",
    "server-driven-ui"
  ],
  "author": "Gravity AI",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@gravityai-dev/plugin-base": "^1.1.3",
    "amazon-connect-chatjs": "^3.1.5",
    "chalk": "^5.6.2",
    "clsx": "^2.0.0",
    "lucide-react": "^0.546.0",
    "markdown-to-jsx": "^7.7.15",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@storybook/react-vite": "9.1.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.0",
    "autoprefixer": "^10.4.21",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.5.6",
    "storybook": "9.1.10",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
